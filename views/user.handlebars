<div class="row">
  <div class="col-md-4">
    <img class="img-responsive center-block" alt="image" src="{{user.image}}" style="width: 300px;margin-bottom: 25px;">
  </div>
  <div class="col-md-8">
    <h3>{{user.name}}</h3>
    <p>{{user.email}}</p>
    <p>{{numOfComments}}已評論餐廳</p>
    {{#if isRightUser}}
      <a class="btn btn-primary" href="/users/{{user.id}}/edit" role="button">Edit</a>
    {{/if}}
  </div>
  <div class="card mt-2">
    <div class="card-header">{{numOfComments}}已評論餐廳</div>
    <div class="card-body d-flex">
      {{#each comments}}
      <div class="card mx-2">
        <a href="/restaurants/{{this.RestaurantId}}">
          <img src="{{this.Restaurant.image}}" class="card-img-top">
        </a>
      </div>
    {{/each}}
    </div>
  </div>
</div>

