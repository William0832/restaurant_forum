<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img src="{{user.image}}" class="card-img" >
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h2 class="card-title">{{user.name}}</h2>
        <p class="card-text">{{user.email}}</p>
        <p class="card-text">{{Comments.length}} 已評論餐廳</p>
        <p class="card-text">{{FavoritedRestaurants.length}} 收藏的餐廳</p>
        <p class="card-text">{{Followings.length}} flowings (追蹤者)</p>
        <p class="card-text">{{Followers.length}} flowers (追隨者)</p>
        {{#if isRightUser}}
          <a class="btn btn-primary" href="/users/{{user.id}}/edit" role="button">Edit</a>
        {{/if}}
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="card my-3">
      <div class="card-header">{{Followings.length}} followings (追蹤者)</div>
      <div class="card-body d-flex flex-wrap">
        {{#each Followings}}
        <div class="mx-2">
          <a href="/users/{{this.id}}">
            <img src="{{this.image}}" width="100">
          </a>
        </div>
      {{/each}}
      </div>
    </div>
    <div class="card my-3">
      <div class="card-header">{{Followers.length}} followers (追隨者)</div>
      <div class="card-body d-flex flex-wrap">
        {{#each Followers}}
          <div class="m-2">
            <a href="/users/{{this.id}}">
              <img src="{{this.image}}" width="100">
            </a>
          </div>
        {{/each}}
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="card my-3">
      <div class="card-header">{{Comments.length}} 已評論餐廳</div>
      <div class="card-body d-flex flex-wrap">
        {{#each Comments}}
          <div class="m-2">
            <a href="/restaurants/{{this.RestaurantId}}">
              <img src="{{this.Restaurant.image}}" width="100">
            </a>
          </div>
        {{/each}}
      </div>
    </div>
    <div class="card my-3">
      <div class="card-header">{{FavoritedRestaurants.length}} 已收藏餐廳</div>
      <div class="card-body d-flex flex-wrap">
        {{#each FavoritedRestaurants}}
          <div class="m-2">
            <a href="/restaurants/{{this.id}}">
              <img src="{{this.image}}" width="100">
            </a>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>