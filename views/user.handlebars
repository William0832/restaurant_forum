<div class="row">
  <div class="col-md-4">
    <img class="img-responsive center-block" alt="image" src="{{user.image}}" style="width: 250px;margin-bottom: 25px;">
  </div>
  <div class="col-md-8">
    <h3>{{user.name}}</h3>
    <p>{{user.email}}</p>

    {{#if isRightUser}}
      <a class="btn btn-primary" href="/users/{{user.id}}/edit" role="button">Edit</a>
    {{/if}}
  </div>
</div>

