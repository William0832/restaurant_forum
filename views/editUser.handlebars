<div class="row">
  <form action="/users/{{user.id}}?_method=PUT" method="POST" enctype="multipart/form-data">

    <div class="form-group">
      <strong><label for="name">Name</label></strong>
      <input id="name" name="name" type="text" placeholder="{{user.name}}">
    </div>

    <div class="form-group">
      <strong><label for="image">Image</label></strong>
      <input id="image" class="form-control-file" name="image" type="file" >
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>

  </form>
</div>
